<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desert_bg"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#AA000000"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPERATION:\nRISING LION"
            android:gravity="center"
            android:textColor="#FFEB3B"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/et_player_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter Pilot Callsign"
            android:textColor="#000000"
            android:textColorHint="#444444"
            android:textAlignment="center"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_start_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAUNCH MISSION"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:backgroundTint="#D32F2F"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP ACES"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_high_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. - \n2. - \n3. - \n4. - \n5. -"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/game_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#80000000"
            android:padding="8dp"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/score_lbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Targets: 0"
                android:textColor="#00FF00"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/hearts_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❤❤❤"
                android:textColor="#FF0000"
                android:textSize="24sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/nuclear_reactor"
            android:layout_below="@id/top_panel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:alpha="0.8"/>
        <GridLayout
            android:id="@+id/game_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:columnCount="3"
            android:rowCount="5">

            <ImageView android:id="@+id/r0c0" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r0c1" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r0c2" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r1c0" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r1c1" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r1c2" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r2c0" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r2c1" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r2c2" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r3c0" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r3c1" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r3c2" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r4c0" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>
            <ImageView android:id="@+id/r4c1" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="visible"/>
            <ImageView android:id="@+id/r4c2" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="2dp" android:visibility="invisible"/>

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#555555"
                android:text="◀ BANK LEFT" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#555555"
                android:text="BANK RIGHT ▶" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>