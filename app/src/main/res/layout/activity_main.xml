<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desert_bg">

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#E6000000"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RISING LION"
            android:textColor="#FFEB3B"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/et_player_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Pilot Name"
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_mode_sensors"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="PLAY: SENSORS"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_mode_slow"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="PLAY: BUTTONS (SLOW)"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_mode_fast"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="PLAY: BUTTONS (FAST)"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btn_high_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ† TOP SCORES &amp; MAP ðŸŒ"
            android:backgroundTint="#9C27B0"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/game_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#99000000"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView android:id="@+id/score_lbl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Score: 0" android:textColor="#00FF00" android:textSize="20sp" android:textStyle="bold"/>
            </LinearLayout>

            <TextView android:id="@+id/hearts_lbl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â¤â¤â¤" android:textColor="#FF0000" android:textSize="20sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/nuclear_reactor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:alpha="0.6"/>

        <GridLayout
            android:id="@+id/game_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:columnCount="5"
            android:rowCount="7">
        </GridLayout>

        <LinearLayout
            android:id="@+id/lane_markers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/game_grid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:visibility="gone">
            <Button android:id="@+id/btn_left" android:layout_width="60dp" android:layout_height="60dp" android:text="&lt;" android:layout_margin="10dp"/>
            <Button android:id="@+id/btn_right" android:layout_width="60dp" android:layout_height="60dp" android:text="&gt;" android:layout_margin="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>